/*############################################################################
 Retrieves the level the player selected.
#############################################################################*/
method int getLevel()
{
  var boolean exit;
  var int key;
  let key = 0;
  let exit = false;
  
  while (~exit)
  {

	while(key = 0)
	{
	let key = Keyboard.keyPressed();
	}

	if (key = 81)
        {
	return -1;
	}
	if (key = 49)
	{
	return 1;
	}
	if (key = 50)
	{
	return 2;
	}
	if (key = 51)
	{
	return 3;
	}
	let key = 0;
   }
 return 0;
}

/*############################################################################
 Disposes Opening object.
#############################################################################*/
method void dispose()
{
	do Output.moveCursor(0,0);
	do Screen.clearScreen();
	do Memory.deAlloc(this);
	return;
 }

